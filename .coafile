[Java]
# https://github.com/coala/coala-bears/issues/1750
bears = CheckstyleBear
checkstyle_configs = ./java-style.xml
files = src/rprocessing/**/*.java
ignore = src/test/*.java, src/rprocessing/TreeCopier.java, src/rprocessing/mode/run/OSXAdapter.java, src/rprocessing/mode/RLangInputHandler.java

[R]
bears = FormatRBear
files = examples/**/*.rpde
r_max_expression_length = 80
